@model AutoDrive.VM.AutoDriveHR.EmployeeExperienceVM

    <form enctype="multipart/form-data" action="@Url.Action("Save","EmployeeExperience")">
        <div class="form-horizontal">

            <div class="form-group">
                @Html.HiddenFor(x=>x.ID)
                @Html.HiddenFor(x=>x.EmployeeId)
                @Html.LabelFor(x => x.FromMonth, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.DropDownListFor(x => x.FromMonth, ViewBag.Monthes as SelectList, Messages.MonthsDropDown, new { @class = "form-control" })

                    @Html.ValidationMessageFor(x => x.FromMonth, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(x => x.FromYear, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.DropDownListFor(x => x.FromYear, ViewBag.Years as SelectList, Messages.YearsDropDown, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FromYear, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(x => x.ToMonth, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.DropDownListFor(x => x.ToMonth, ViewBag.Monthes as SelectList, Messages.MonthsDropDown, new { @class = "form-control" })

                    @Html.ValidationMessageFor(x => x.ToMonth, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(x => x.ToYear, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-2">
                    @Html.DropDownListFor(x => x.ToYear, ViewBag.Years as SelectList, Messages.YearsDropDown, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ToYear, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.CompanyName, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.CompanyName, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(x => x.CompanyName, "", new { @class = "text-danger" })
                </div>
                @Html.LabelFor(x => x.JobSpecification, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.JobSpecification, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(x => x.JobSpecification, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.CompanyAddress, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-5">
                    @Html.EditorFor(x => x.CompanyAddress, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(x => x.CompanyAddress, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </form>
<script>
    $(document).ready(function () {
        debugger
        if ($("#ID").val() != "0") {
            $("#FromMonth").val("@Model.FromMonth")
            $("#FromYear").val("@Model.FromYear")
            $("#ToMonth").val("@Model.ToMonth")
            $("#ToYear").val("@Model.ToYear")
        }
    });

</script>
