@model IEnumerable<AutoDrive.VM.AutoDriveHR.EmployeeArchiveVM>


@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="card col-md-4">
            <img class="card-img-top" style="width:100%;height:130px" src="@item.Imagepath" />

            <div class="card-body" style="margin-top:10px;">
                <center>
                    <a href="#" class="btn btn-primary" onclick="AddNew(@item.ID)">@Messages.Edit</a>
                    <a href="@item.ImageUrl" target="_blank" class="btn btn-default" download>@Resources.ShowBtn</a>
                    <a href="#" class="btn btn-danger" onclick="Delete(@item.ID)">@Messages.Delete</a>
                </center>
            </div>
        </div>
    }
}

