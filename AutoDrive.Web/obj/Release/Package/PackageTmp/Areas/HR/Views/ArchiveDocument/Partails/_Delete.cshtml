
@model AutoDrive.VM.AutoDriveHR.EmployeeArchiveVM

@Html.HiddenFor(model => model.ID)
@Html.HiddenFor(model => model.EmployeeId)
<h2>@Messages.ConfirmDeleteMsg</h2>

<script>
    function DeleteSuccess(rs) {
        if (rs.data.Type == "Success") {

            $("#files").html(rs.View)
            $("#Delete").modal("hide")
            toastr.success(rs.data.Message, " ", { timeOut: 1500 })
        }
        if (rs.data.Type == "Error") {
            $("#Delete").modal("show")
            toastr.error(rs.data.Message, " ", { timeOut: 1500 })
        }
    }
</script>
